{% extends 'backoffice/base_admin.html.twig' %}

{% form_theme edit_form 'form/fields.html.twig' %}

{% block title %}{{ parent() }} Modification Option service {% endblock %}

{% set menu_service_option        = true %}
{% set menu_service_option_create = true %}

{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="callout callout-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="callout callout-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                {{ form_start(edit_form) }}
                    <div class="box-header">
                        <h3 class="box-title">Editer un option service</h3>
                    </div>

                    <div class="box-body">
                        {{ form_row(edit_form.lvServiceOptionType) }}
                        {{ form_row(edit_form.srvOptLabel) }}
                        {{ form_row(edit_form.srvOptDesc) }}
                        <hr/>
                        {{ form_row(edit_form.srvOptValeur) }}
                        {{ form_row(edit_form.lvServiceOptionValeurType.srvOptValTpVal) }}
                    </div>

                    <div class="box-footer">
                        <input type="submit" class="btn btn-primary" value="Modifier" name="update_service_option"/>
                        <a href="{{ path('service_option_index') }}"
                           class="btn btn-default pull-left btn-mini-rectif" >
                            Retour Ã  la liste
                        </a>
                    </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </div>
{% endblock %}